{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "inlineSources": true,
        "outDir": "tmp",
        "typeRoots": [ "./node_modules/@types" ],
        "types": [ "node","jasmine" ]
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
